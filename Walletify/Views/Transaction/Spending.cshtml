@model Walletify.ViewModel.Transactions.TransactionViewModel;
 @{
     ViewBag.Title = "Walletify-Spending";

 } 
@section CustomCss {
    <link rel="stylesheet" href="~/css/StyleSpending.css" asp-append-version="true" />
}
<section>
    <div class="container">
        <div class="header">
            <div class="image">
                <img src="@Url.Content("~/Images/Spending.jpg")" class="w-100 h-100" />
            </div>
        </div>
        <form asp-action="Spending" asp-controller="Transaction">
            <div class="row-field">
                    <div class="input-box">
                    <input asp-for="Amount" />
                    <label asp-for="Amount">Amount</label>
                    </div>
                <div class="input-box">
                    <select asp-for="CategoryId" class="form-control">
                        <option class ="text-success"value="">Select Category</option>
                        @foreach (var category in ViewBag.outcomeCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
               </div>
            </div>
            <div class="row-field message-box">
                <textarea asp-for="Note"></textarea>
                <label asp-for="Note">Note</label>
            </div>
            <div class="button">
                <button asp-action="Spending" asp-controller="Transaction" class="text-center text-capitalize">Add</button>
            </div>
        </form>
    </div>
</section>