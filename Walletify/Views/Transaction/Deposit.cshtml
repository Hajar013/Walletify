@{
    ViewBag.Title = "Walletify-Deposit";
}
@section CustomCss {
    <link rel="stylesheet" href="~/css/StyleDeposit.css" asp-append-version="true" />
}
<section>
    <div class="container">
        <div class="header">
            <div class="image">
                <img src="@Url.Content("~/Images/Deposit.jpg")" class="w-100 h-100" />
            </div>
        </div>
        <form>
            <div class="row-field">
                <div class="col-field">
                    <div class="input-box">
                        <input type="number" required>
                        <label for="">Amount</label>
                    </div>
                    <div class="input-box ">
                        <input type="email" required>
                        <label for="">Category</label>
                    </div>
                </div>
                <div class="col-field">
                    <div class="message-box">
                        <textarea name="" id="" required></textarea>
                    </div>
                </div>
            </div>
            <div class="row-field button">
                <button asp-action="Signin" asp-controller="Accounts" class="text-center text-capitalize">Deposit Now</button>
            </div>
        </form>
    </div>
</section>