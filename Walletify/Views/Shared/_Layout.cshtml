<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Common CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Section for page-specific CSS -->
    @RenderSection("CustomCss", required: false)
</head>
<body>
        <!-- Nav Bar -->
        <nav class="d-flex align-items-center justify-content-between">
            <div class="container">
                <a class="logo fs-3 fw-bold text-white text-decoration-none" asp-action="Index" asp-controller="Accounts">
                    Walletify
                </a>
            </div>
        </nav>
        <!-- Main content area -->
        <main>
        @RenderBody()
        </main>
        <!-- Footer -->
        <footer class="d-flex align-items-center justify-content-center flex-column">
            <div class="container text-white  d-flex justify-content-center align-items-center flex-column fs-6">
                <span class="">© 2024 Walletify. All rights reserved.</span>
                <a>Privacy Policy</a>
            </div>
        </footer>
</body>
</html>
